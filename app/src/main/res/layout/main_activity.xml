<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <!-- Progress bar spinner view for loading -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Semi_Transparent2"
        android:id="@+id/main_activity_loading_view"
        >

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_activity_loading_bar"
            />

    </RelativeLayout>

    <!-- Top Text view-->
    <TextView
        android:id="@+id/main_activity_top_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:text="Employees"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <!-- Recyclerview-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_activity_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_activity_top_tv"
        >

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>