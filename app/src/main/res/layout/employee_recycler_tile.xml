<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <View
        android:id="@+id/view8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        />

    <RelativeLayout
        android:id="@+id/employee_recycler_top_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/view8"
        android:background="@color/LightSkyBlue"
        >


        <ImageView
            android:id="@+id/employee_recycler_picture"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:background="@color/Semi_Transparent2"
            />
        <!-- Excluded this for now, but include if you want the photo to stretch
        and fit the space: android:scaleType="fitXY" -->

        <TextView
            android:id="@+id/employee_recycler_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/employee_recycler_picture"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/employee_recycler_picture"
            android:layout_toLeftOf="@+id/employee_recycler_hire_date"
            android:layout_toRightOf="@+id/employee_recycler_picture"
            android:text="First and Last name"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/employee_recycler_picture"
            android:layout_alignLeft="@+id/employee_recycler_name"
            android:layout_alignStart="@+id/employee_recycler_name"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/employee_recycler_hire_date"
            android:text="Has employee attended HR Training?"
            android:textColor="@color/black"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/employee_recycler_name"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:text="Hire Date:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/employee_recycler_hire_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView3"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:text="2015/11/11"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/employee_recycler_hr_training"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/employee_recycler_hire_date"
            android:gravity="center"
            android:text="Yes"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/red"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/employee_recycler_top_layout"
        android:background="@color/grey"
        />

</RelativeLayout>